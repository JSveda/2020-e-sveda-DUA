<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox styleClass="box" stylesheets="@../../../../src/main/java/com/main/css/SectionDesign.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.TestPage">
    <children>
        <HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="box" VBox.vgrow="ALWAYS">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" spacing="110.0" style="-fx-background-color: rgb(11, 20, 37);" VBox.vgrow="NEVER">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0" left="30.0" right="30.0" top="15.0" />
                            </padding>
                     <children>
                        <Button fx:id="chooseFileButton" mnemonicParsing="false" onAction="#chooseFile" prefHeight="50.0" prefWidth="150.0" text="Vyberte soubor">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                        <Label fx:id="fileNameLabel" text="jméno souboru" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="imageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                        </HBox>
                  <WebView fx:id="webView" prefHeight="451.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
      <HBox alignment="CENTER_RIGHT" fillHeight="false" prefHeight="50.0" style="-fx-background-color: rgb(11, 20, 37);">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="15.0" />
         </padding>
         <children>
            <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#goToMainMenu" onMouseClicked="#goToMainMenu" text="Hlavní menu">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>
</VBox>
